<style is:global>
    main {
        transition: opacity 0.2s ease-in-out;
    }
    
    .htmx-swapping main {
        opacity: 0;
    }
    
    .htmx-settling main {
        opacity: 1;
    }

    body {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        min-height: 100vh;
        align-items: stretch;
        justify-content: space-between;
    }

    main {
        flex-grow: 1;
        background-color: antiquewhite;
        width: 50vw !important;
    }

    aside {
        flex-shrink: 0;
        border-right: 1px solid black;
        width: 15rem;
    }
</style>