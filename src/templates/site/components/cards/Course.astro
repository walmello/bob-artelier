---
const { name } = Astro.props
---

<article class="card layers">
    <div class="layer">
        <div class="overlay"></div>
        <img src="/images/foto-exemplo.png" alt="" srcset=""/>
    </div>
    <div class="layer">
        <div></div>
        <small>
            <h3>{name}</h3>                        
        </small>
    </div>
</article>

<style>
    .card {
        position: relative;
        height: max(24.5vw, 15rem);
        aspect-ratio: 1/1.5;
        flex: 0 0 fit-content;
    }

    img {
        width: 102%;
        height: 102%;
        object-fit: cover;
        object-position: top;
    }
    
    article {
        padding: 0;
        overflow: hidden;
    }
    
    .layers > *:nth-child(2) {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        padding: 1rem;
        color: white;
    }
    
    .layers > *:nth-child(2) h3 {
        font-size: 1.2rem;
        color: white
    }
    
    .overlay {
        position: absolute;
        background: linear-gradient(#0000, #000d);
        width: 100%;
        height: 100%;
    }
</style>