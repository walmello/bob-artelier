---
const { testimonial } = Astro.props
---

<article>
    <blockquote>
        "
        <small>
            <em>
                {testimonial.text}
            </em>
        </small>
    </blockquote>
    <div class="row">
        <img src={testimonial.image}" alt="" srcset=""/>
        <p><strong>{testimonial.name}</strong></p>
    </div>
</article>

<style>
    img {
        width: 3rem;
        aspect-ratio: 1/1;
        border-radius: 999px;
        background-color: antiquewhite;        
    }

    article {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        flex: 0 0 20rem;
    }

    .row {
        justify-content: start;
        align-items: center;
        gap: 1rem;
    }

    blockquote {
        max-height: 8rem;
        overflow-y: auto;
    }

    @media (max-width: 489px) {
        article {
            flex: 0 0 80vw;
        }
    }
</style>