<header x-data="{
    open: false
}">
<div class="overlay"></div>
<nav class="row container-fluid fixed" x-intersect="$el.classList.add('init')">
    <div>
        <a href="/">
            <img src="/images/logo.svg" alt="" srcset=""/>
        </a>
    </div>
    <div x-cloak @click="open = !open" role="button" class="menu-button">
        <span x-show="!open">≡</span>
        <span x-show="open">×</span>
