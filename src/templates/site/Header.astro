    }
    
    .overlay {
        pointer-events: none;
        background-color: rgba(0, 0, 0, 0.5);
        position: fixed;
        z-index: 999;
        width: 100vw;
        height: 100vh;
        opacity: 0;
        top: 0;
        left: 0;
        transition: var(--default-transition);
        box-sizing: border-box;
    }
    
    @media (min-width: 767px) {
        .menu a {
            font-size: 0.8rem;
        }
        
        li {
            margin-block: 0;
            padding-block: 0;
        }        
    }
    
    
    .spacer {
