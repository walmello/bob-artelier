<style>
    section {
        align-items: baseline;
        position: relative;
    }

    section article {
        position: sticky;
        top: 7rem;
    }

    button {
        width: 100%;
    }

    small h1{
        font-size: 2rem;
    }

    small h2 {
        font-size: 1.2rem;
    }

    @media (max-width: 767px) {
        section {
            display: flex;
            flex-direction: column-reverse;
            align-items: stretch;
        }

        section article {
            position: static;
            top: 7rem;
        }

        section div:has(small) {
            max-height: 30vh;
            overflow-y: scroll;
            border: 2px solid #0001;
            padding: 1rem;
        }
    }
</style>